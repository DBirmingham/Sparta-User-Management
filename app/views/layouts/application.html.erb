<!DOCTYPE html>
<html>
  <head>
    <title>UserManagement</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav>
  		<% if sparta_user_signed_in? %>
		  <a>
		  <%= link_to('Logout', destroy_sparta_user_session_path, method: :delete) %>        
		  </a>
		<% else %>
		  <a>
		  <%= link_to('Login', new_sparta_user_session_path)  %>  
		  </a>
		<% end %>

		<% if sparta_user_signed_in? %>
		  <a>
		  <%= link_to('Edit registration', edit_sparta_user_registration_path) %>
		  </a>
		<% else %>
		  <a>
		  <%= link_to('Register', new_sparta_user_registration_path)  %>
		  </a>
		<% end %>
  	</nav>

    <%= yield %>
  </body>
</html>
